class UnionFind{
    vector<int> parent;
    public:
    UnionFind(int size){
       parent.resize(size);
        for(int i=0;i<size;i++){
            parent[i]=i;
        }
    }
    int find(int x){
        if(x==parent[x])return x;
        return parent[x]=find(parent[x]);
    }
    void union_set(int x,int y){
        int xset=find(x),yset=find(y);
        parent[xset]=yset;
    }
};
